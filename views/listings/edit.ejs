<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit Listing</h3><br>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" value="<%= listing.title %>" required autocomplete="off" class="form-control">
                <div class="valid-feedback">✓ Perfect</div>
                <div class="invalid-feedback">Please provide a descriptive title for your property.</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" required autocomplete="off" class="form-control"><%= listing.description %></textarea>
                <div class="valid-feedback">✓ Got it!</div>
                <div class="invalid-feedback">Please add a short description.</div>
            </div>
            
            <div class="mb-3 text-center">
                <label class="form-label fw-bold">Previously Uploaded Image</label>
                <br>
                <img src="<%= originalImageUrl %>" alt="Listing img" class="img-fluid rounded">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload New Image</label>
                <input type="file" name="listing[image]" class="form-control">
                <div class="valid-feedback">✓ Image selected</div>
                <div class="invalid-feedback">.</div>
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" value="<%= listing.price %>" required autocomplete="off" class="form-control">
                    <div class="valid-feedback">✓ Good</div>
                    <div class="invalid-feedback">Please enter a valid price.</div>
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%= listing.country %>" required autocomplete="off" class="form-control">
                    <div class="valid-feedback">✓ Set</div>
                    <div class="invalid-feedback">Please provide a valid country name.</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" value="<%= listing.location %>" required autocomplete="off" class="form-control">
                <div class="valid-feedback">✓ Set</div>
                <div class="invalid-feedback">Please specify the city or neighborhood where your property is located.</div>
            </div>
            
            <button type="submit" class="btn btn-dark add-edit-btn mt-4">Edit</button>
        </form>
    </div>
</div>